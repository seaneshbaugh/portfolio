.page
  %h3.page-title= t('.title')
  = form_for resource, as: resource_name, url: session_path(resource_name) do |f|
    .input-field
      = f.email_field :email
      = f.label :email
    .input-field
      = f.password_field :password
      = f.label :password
    - if devise_mapping.rememberable?
      %p
        = f.check_box :remember_me
        = f.label :remember_me
    = f.submit t('.submit')
  = render 'devise/shared/links'
