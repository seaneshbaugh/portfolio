#forgot-password
  %h1= t('devise.passwords.forgot_your_password')
  = simple_form_for resource, :as => resource_name, :url => password_path(resource_name, :html => { :method => :post, :class => 'form-horizontal' }) do |f|
    %fieldset
      = f.input :email, :required => true
    .form-actions
      = f.button :submit, t('devise.passwords.new_button')
  = render 'devise/shared/links'
