= form_for [:admin, @page], builder: AceBuilder, layout: :horizontal do |f|
  = f.text_field :title
  = f.ace_editor :body, mode: 'rhtml'
  = f.ace_editor :style, mode: 'css'
  = f.ace_editor :script, mode: 'javascript'
  = f.text_area :meta_description, rows: '2'
  = f.text_area :meta_keywords, rows: '2'
  = f.number_field :order
  = f.text_field :color, class: 'colorpicker-control'
  = f.check_box :show_in_menu
  = f.check_box :visible
  = f.submit 'Submit'
  = link_to 'Cancel', admin_pages_path, class: 'btn btn-default'
