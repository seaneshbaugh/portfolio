= form_for [:admin, @user], html: { class: 'col s12' } do |f|
  .row
    .input-field.col.s12
      = f.text_field :first_name
      = f.label :first_name
  .row
    .input-field.col.s12
      = f.text_field :last_name
      = f.label :last_name
  .row
    .input-field.col.s12
      = f.email_field :email
      = f.label :email
  .row
    .input-field.col.s12
      = f.password_field :password
      = f.label :password
  .row
    .input-field.col.s12
      = f.password_field :password_confirmation
      = f.label :password_confirmation
  .row
    .input-field.col.s12
      = f.label :roles
      = f.collection_check_boxes(:role_ids, Role.all, :id, :name) do |c|
        = c.label do
          = c.check_box
          %span= c.text.titleize
  .row
    .input-field.col.s12
      = f.submit t('submit'), class: success_button_class
      = link_to t('cancel'), admin_users_path, class: warning_button_class
