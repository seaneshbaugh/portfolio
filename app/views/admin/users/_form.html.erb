<h2><%= legend %></h2>
<%= form_for [:admin, @user] do |f| %>
	<fieldset>
		<p>
			<%= f.label :name %>
			<%= f.text_field :name, :class => "text small" %>
		</p>
		<p>
			<%= f.label :password %>
			<%= f.password_field :password, :class => "text small" %>
		</p>
		<p>
			<%= f.label :password_confirmation %>
			<%= f.password_field :password_confirmation, :class => "text small" %>
		</p>
		<p>
			<%= f.label :email_address %>
			<label for="user_email_address">E-mail:</label>
			<%= f.text_field :email_address, :class => "text small" %>
		</p>
		<p>
			<%= f.label :email_address_confirmation %>
			<label for="user_email_confirmation">E-mail Confirmation:</label>
			<%= f.text_field :email_address_confirmation, :class => "text small" %>
		</p>
		<p>
			<%= f.label :first_name %>
			<label for="user_first_name">First Name:</label>
			<%= f.text_field :first_name, :class => "text small" %>
		</p>
		<p>
			<%= f.label :last_name %>
			<label for="user_last_name">Last Name:</label>
			<%= f.text_field :last_name, :class => "text small" %>
		</p>
		<p>
			<%= f.label :phone_number %>
			<label for="user_phone_number">Phone Number:</label>
			<%= f.text_field :phone_number, :class => "text small" %>
		</p>
		<p>
			<%= f.label :privilegel_level %>
			<label for"user_privilege_level">Privilege Level:</label>
			<%= f.select :privilege_level, [['Guest', 0], ['User', 1], ['Staff Member', 2], ['Admin', 3]], :class => "select" %>
		</p>
		<br />
		<%= submit_tag "Submit", :class => "submit" %>
	</fieldset>
<% end %>
