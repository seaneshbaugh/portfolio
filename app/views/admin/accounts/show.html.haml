- present @account do |user_presenter|
  .row
    .col.s12
      %h2= t('.title')
  .row
    .admin-actions.col.s12
      = edit_icon_link(edit_admin_account_path, label: t('edit'))
  .user
    .attribute.first-name.row
      .attribute-name.col.s12.m3.l3= t('activerecord.attributes.user.first_name')
      .attribute-value.col.s12.m9.l9= user_presenter.first_name
    .attribute.last-name.row
      .attribute-name.col.s12.m3.l3= t('activerecord.attributes.user.last_name')
      .attribute-value.col.s12.m9.l9= user_presenter.last_name
    .attribute.email.row
      .attribute-name.col.s12.m3.l3= t('activerecord.attributes.user.email')
      .attribute-value.col.s12.m9.l9
        = user_presenter.email
        = user_presenter.email_link
    .attribute.roles.row
      .attribute-name.col.s12.m3.l3= t('activerecord.attributes.user.roles')
      .attribute-value.col.s12.m9.l9= user_presenter.roles
    .attribute.sign-in-count.row
      .attribute-name.col.s12.m3.l3= t('activerecord.attributes.user.sign_in_count')
      .attribute-value.col.s12.m9.l9= user_presenter.sign_in_count
    .attribute.current-sign-in-at.row
      .attribute-name.col.s12.m3.l3= t('activerecord.attributes.user.current_sign_in_at')
      .attribute-value.col.s12.m9.l9= user_presenter.current_sign_in_at
    .attribute.last-sign-in-at.row
      .attribute-name.col.s12.m3.l3= t('activerecord.attributes.user.last_sign_in_at')
      .attribute-value.col.s12.m9.l9= user_presenter.last_sign_in_at
    .attribute.current-sign-in-ip.row
      .attribute-name.col.s12.m3.l3= t('activerecord.attributes.user.current_sign_in_ip')
      .attribute-value.col.s12.m9.l9= user_presenter.current_sign_in_ip
    .attribute.last-sign-in-ip.row
      .attribute-name.col.s12.m3.l3= t('activerecord.attributes.user.last_sign_in_ip')
      .attribute-value.col.s12.m9.l9= user_presenter.last_sign_in_ip
    .attribute.created-at.row
      .attribute-name.col.s12.m3.l3= t('activerecord.attributes.user.created_at')
      .attribute-value.col.s12.m9.l9= user_presenter.created_at
    .attribute.updated-at.row
      .attribute-name.col.s12.m3.l3= t('activerecord.attributes.user.updated_at')
      .attribute-value.col.s12.m9.l9= user_presenter.updated_at
