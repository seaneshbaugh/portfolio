<div id="page-info" class="in">
  <h2>Admin Panel Home</h2>
</div>
<div class="line"></div>
<div id="quick-links" class="in">
<ul>
  <li><%= link_to "New User", new_admin_user_path %></li>
  <li><%= link_to "New Page", new_admin_page_path %></li>
  <li><%= link_to "New Blog Post", new_admin_post_path %></li>
</ul>
</div>
<div id="quick-post" class="in">
  <h3>Quick Post</h3>
  <%= form_for [:admin, @post] do |f| %>
    <fieldset>
      <%= f.hidden_field :status, :value => 1 %>
      <%= f.hidden_field :private, :value => 0 %>
      <p>
        <%= f.label :title, "Title:" %><br />
        <%= f.text_field :title, :class => "small" %>
      </p>
      <p>
        <%= f.label :body, "Body:" %><br />
        <%= f.text_area :body, :class => "large" %>
      </p>
      <p>
        <%= submit_tag "Submit", :class => "submit" %>
      </p>
    </fieldset>
  <% end %>
</div>
