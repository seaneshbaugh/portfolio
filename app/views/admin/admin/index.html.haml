%section#quick-links.row
  %h2.col-xs-12= t('admin.sections.quick_links')
  - %w(post page picture user).each do |model|
    - if can? :create, "#{model.camelcase}".constantize
      .col-xs-6.col-md-3
        = link_to self.send("new_admin_#{model}_path".to_sym), :class => 'thumbnail' do
          = image_tag image_path("icons/32x32/#{model}-add.png"), :alt => t("#{model.pluralize}.new.title")
          .caption
            %p= t("#{model.pluralize}.new.title")
- if can? :create, Post
  %section#quick-post.row
    %h2.col-xs-12= t('admin.sections.quick_post')
    = bootstrap_form_for [:admin, Post.new], :html => { :class => 'form-horizontal' } do |f|
      = f.text_field :title
      = picture_inserter '#post_body-editor'
      = f.text_area :body, :style => 'display: none;'
      #post_body-editor.ace-editor{"data-mode" => "html"}
      .form-group
        .col-lg-offset-2.col-lg-10
          = f.submit 'Submit'
%section#rails-info.row.hidden-xs.hidden-sm
  %h2.col-xs-12
    = t('admin.sections.rails_info')
    - if Rails.env.production?
      %small
        Deployed On: #{Time.parse(Rails.root.to_s.split('/').last).strftime('%m-%d-%Y %H:%M:%S')}
  .col-xs-12
    = Rails::Info.to_html.html_safe
%section#gems.row.hidden-xs.hidden-sm
  %h2.col-xs-12= t('admin.sections.gems')
  %ul
    - get_gem_dependencies.each do |gem|
      %li
        = gem[:name]
        (#{gem[:version]})
        - if gem[:dependencies].present?
          %ul
            - gem[:dependencies].each do |dependency|
              %li
                = dependency[:name]
                (#{dependency[:requirement]})
