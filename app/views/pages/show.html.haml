- present @page do |page_presenter|
  = page_presenter.meta_content
  .page{ id: "page-#{page_presenter.slug}" }
    %header.page-header
      %h1{ style: page_presenter.header_style }= page_presenter.title
    .page-body
      = page_presenter.style_tag
      = page_presenter.body_tag
      = page_presenter.script_tag
